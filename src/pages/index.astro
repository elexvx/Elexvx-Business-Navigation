---
import Layout from '../layouts/Layout.astro';
import { navigation, type NavigationCategory } from '../config/links';

const iconMap: Record<string, string> = {
  check: '<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l5 5l10 -10" />',
  tool: '<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M7 10h3v-3l-3.5 -3.5a6 6 0 0 1 8 8l6 6a2 2 0 0 1 -3 3l-6-6a6 6 0 0 1 -8 -8l3.5 3.5" />',
  x: '<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M18 6l-12 12" /><path d="M6 6l12 12" />',
  star: '<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 17.75l-6.172 3.245l1.179 -6.873l-5 -4.867l6.9 -1l3.086 -6.253l3.086 6.253l6.9 1l-5 4.867l1.179 6.873z" />',
  'alert-triangle': '<path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 9v4" /><path d="M10.363 3.591l-8.106 13.534a1.914 1.914 0 0 0 1.636 2.871h16.214a1.914 1.914 0 0 0 1.636 -2.87l-8.106 -13.536a1.914 1.914 0 0 0 -3.274 0z" /><path d="M12 16h.01" />'
};

const statusConfig: Record<string, { text: string; color: string; iconName: string }> = {
  available: { text: '可用', color: 'text-green-600', iconName: 'check' },
  maintenance: { text: '维护中', color: 'text-orange-600', iconName: 'tool' },
  unavailable: { text: '不可访问', color: 'text-red-600', iconName: 'x' },
  beta: { text: '测试版', color: 'text-blue-600', iconName: 'star' },
  deprecated: { text: '已弃用', color: 'text-gray-500', iconName: 'alert-triangle' }
};

// 获取所有链接的总数
function getTotalLinks(categories: NavigationCategory[]): number {
  return categories.reduce((total, category) => {
    if (category.subcategories) {
      return total + category.subcategories.reduce((subTotal, sub) => subTotal + sub.links.length, 0);
    }
    return total + (category.links?.length || 0);
  }, 0);
}

// 获取所有分类数（包括二级分类）
function getTotalCategories(categories: NavigationCategory[]): number {
  return categories.reduce((total, category) => {
    if (category.subcategories) {
      return total + category.subcategories.length;
    }
    return total + 1;
  }, 0);
}
---

<Layout 
  title="快速访问"
  description="专业的企业级工具和资源导航平台，提供开发工具、设计资源、云服务等分类导航，快速访问常用工具和资源"
  keywords={['企业导航', '工具导航', '快速访问', '开发工具', '设计资源']}
>
  <style>
    /* 页面动画效果 */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes fadeInLeft {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }
    
    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }
    
    @keyframes shimmer {
      0% {
        background-position: -200px 0;
      }
      100% {
        background-position: calc(200px + 100%) 0;
      }
    }
    
    /* 应用动画类 */
    .animate-fade-in-up {
      animation: fadeInUp 0.6s ease-out;
    }
    
    .animate-fade-in-left {
      animation: fadeInLeft 0.6s ease-out;
    }
    
    .animate-pulse-gentle {
      animation: pulse 3s ease-in-out infinite;
    }
    
    .shimmer-effect {
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.4),
        transparent
      );
      background-size: 200px 100%;
      animation: shimmer 2s infinite;
    }
    
    /* 延迟动画 */
    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    .delay-400 { animation-delay: 0.4s; }
    .delay-500 { animation-delay: 0.5s; }
    
    /* 卡片悬停效果增强 */
    .card-hover {
      position: relative;
      overflow: hidden;
    }
    
    .card-hover::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(59, 130, 246, 0.1),
        transparent
      );
      transition: left 0.5s ease;
    }
    
    .card-hover:hover::before {
      left: 100%;
    }
  </style>
  <div class="p-8 animate-fade-in-up">
    <!-- 链接卡片网格 -->
    <div class="space-y-8">
      {navigation.map(group => (
        <section>
          <h2 id={`category-${group.category.replace(/\s+/g, '-').replace(/[^\u4e00-\u9fa5a-zA-Z0-9\-]/g, '')}`} class="text-xl font-semibold text-gray-800 mb-4 flex items-center scroll-mt-24">
            <div class="w-1 h-6 bg-blue-600 rounded-full mr-3"></div>
            {group.category}
          </h2>
          
          {group.subcategories ? (
            <!-- 有二级分类的情况 -->
            <div class="space-y-6">
              {group.subcategories.map(subcategory => (
                <div>
                  <h3 id={`subcategory-${group.category.replace(/\s+/g, '-').replace(/[^\u4e00-\u9fa5a-zA-Z0-9\-]/g, '')}-${subcategory.name.replace(/\s+/g, '-').replace(/[^\u4e00-\u9fa5a-zA-Z0-9\-&]/g, '')}`} class="text-lg font-medium text-gray-700 mb-3 ml-4 scroll-mt-24">{subcategory.name}</h3>
                  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-4">
                    {subcategory.links.map(link => (
                      <a
                        href={link.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group block p-5 bg-white rounded-xl shadow-sm hover:shadow-lg border border-gray-200 hover:border-blue-300 transition-all duration-300 hover:-translate-y-1 card-hover animate-fade-in-up"
                      >
                        <div class="flex items-start space-x-4">
                          <!-- 图标区域 -->
                          <div class="flex-shrink-0">
                            {link.icon ? (
                              <div class="w-12 h-12 rounded-xl overflow-hidden bg-white border border-gray-200 group-hover:border-blue-300 transition-all duration-300 hover:scale-105">
                                <img 
                                   src={link.icon} 
                                   alt={`${link.name} logo`}
                                   class="w-full h-full object-cover"
                                   loading="lazy"
                                 />
                              </div>
                            ) : (
                              <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center group-hover:from-blue-600 group-hover:to-blue-700 transition-all duration-300">
                                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                                  <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"></path>
                                </svg>
                              </div>
                            )}
                          </div>
                          
                          <!-- 内容区域 -->
                          <div class="flex-1 min-w-0">
                            <div class="flex items-start justify-between">
                              <div class="flex-1">
                                <h4 class="text-base font-semibold text-gray-900 group-hover:text-blue-600 mb-1 truncate">{link.name}</h4>
                                <p class="text-sm text-gray-600 leading-relaxed line-clamp-2">{link.description}</p>
                              </div>
                              <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-600 transition-colors duration-200 ml-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                              </svg>
                            </div>
                            
                            <!-- 标签或状态指示 -->
                            <div class="mt-3 flex items-center justify-between">
                              <div class="flex flex-wrap gap-1">
                                {link.tags && link.tags.length > 0 ? (
                                  link.tags.map(tag => (
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 group-hover:bg-blue-200 transition-colors duration-200">
                                      {tag}
                                    </span>
                                  ))
                                ) : (
                                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 group-hover:bg-gray-200 transition-colors duration-200">
                                    工具
                                  </span>
                                )}
                              </div>
                              {(() => {
                                const currentStatus = link.status || 'available';
                                const { text, color, iconName } = statusConfig[currentStatus] || statusConfig.available;
                                const icon = iconMap[iconName] || iconMap.check;
                                return (
                                  <div class={`flex items-center text-xs ${color}`}>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler w-4 h-4 mr-1" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" set:html={icon}></svg>
                                    {text}
                                  </div>
                                );
                              })()}
                            </div>
                          </div>
                        </div>
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          ) : (
            <!-- 没有二级分类的情况 -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-4">
              {group.links?.map(link => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group block p-5 bg-white rounded-xl shadow-sm hover:shadow-lg border border-gray-200 hover:border-blue-300 transition-all duration-300 hover:-translate-y-1 card-hover animate-fade-in-up"
                >
                  <div class="flex items-start space-x-4">
                    <!-- 图标区域 -->
                    <div class="flex-shrink-0">
                      {link.icon ? (
                        <div class="w-12 h-12 rounded-xl overflow-hidden bg-white border border-gray-200 group-hover:border-green-300 transition-all duration-300 hover:scale-105">
                          <img 
                             src={link.icon} 
                             alt={`${link.name} logo`}
                             class="w-full h-full object-cover"
                             loading="lazy"
                           />
                        </div>
                      ) : (
                        <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center group-hover:from-green-600 group-hover:to-green-700 transition-all duration-300">
                          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                          </svg>
                        </div>
                      )}
                    </div>
                    
                    <!-- 内容区域 -->
                    <div class="flex-1 min-w-0">
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <h3 class="text-base font-semibold text-gray-900 group-hover:text-green-600 mb-1 truncate">{link.name}</h3>
                          <p class="text-sm text-gray-600 leading-relaxed line-clamp-2">{link.description}</p>
                        </div>
                        <svg class="w-4 h-4 text-gray-400 group-hover:text-green-600 transition-colors duration-200 ml-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                      </div>
                      
                      <!-- 标签或状态指示 -->
                      <div class="mt-3 flex items-center justify-between">
                        <div class="flex flex-wrap gap-1">
                          {link.tags && link.tags.length > 0 ? (
                            link.tags.map(tag => (
                              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 group-hover:bg-green-200 transition-colors duration-200">
                                {tag}
                              </span>
                            ))
                          ) : (
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600 group-hover:bg-gray-200 transition-colors duration-200">
                              服务
                            </span>
                          )}
                        </div>
                        {(() => {
                          const currentStatus = link.status || 'available';
                          const { text, color, iconName } = statusConfig[currentStatus] || statusConfig.available;
                          const icon = iconMap[iconName] || iconMap.check;
                          return (
                            <div class={`flex items-center text-xs ${color}`}>
                              <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler w-4 h-4 mr-1" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" set:html={icon}></svg>
                              {text}
                            </div>
                          );
                        })()}
                      </div>
                    </div>
                  </div>
                </a>
              )) || []}
            </div>
          )}
        </section>
      ))}
    </div>

    <!-- 统计信息 -->
    <div class="mt-12 p-6 bg-white rounded-xl border border-gray-200 animate-fade-in-up delay-300 card-hover">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
        <div class="animate-fade-in-up delay-400 hover:scale-105 transition-transform duration-300">
          <div class="text-2xl font-bold text-blue-600 animate-pulse-gentle">{getTotalLinks(navigation)}</div>
          <div class="text-sm text-gray-600">总链接数</div>
        </div>
        <div class="animate-fade-in-up delay-500 hover:scale-105 transition-transform duration-300">
          <div class="text-2xl font-bold text-green-600 animate-pulse-gentle">{getTotalCategories(navigation)}</div>
          <div class="text-sm text-gray-600">分类数量</div>
        </div>
        <div class="animate-fade-in-up delay-500">
          <a 
            href="https://status.elexvx.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="block hover:bg-gray-50 rounded-lg p-2 transition-all duration-300 hover:scale-105 hover:shadow-md"
          >
            <div class="text-2xl font-bold text-purple-600 hover:text-purple-700 transition-colors duration-200 animate-pulse-gentle">正常</div>
            <div class="text-sm text-gray-600">网站状态</div>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
